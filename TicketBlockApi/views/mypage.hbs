

<div ng-app="homeApp"  ng-controller="UserPageController as userPageCtrl" ng-init="userPageCtrl.initialize('{{handle}}')" ng-cloak>
    {{{{rawhelper}}}}
    <div class="card">
        <div class="card-header">
            
            <div class="">
                <h3>My Published Tweets</h3>
                
                <h4 ng-if="userPageCtrl.walletAddress" class="" ><b>Wallet: </b> <small>{{userPageCtrl.walletAddress}}</small></h4>

            </div>
        </div>
        <div class="card-body" ng-if="!userPageCtrl.myTweets">
            <div class="spinner-border text-success" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div class="card-body" ng-if="userPageCtrl.myTweets.length <1">
            <h4 class="alert alert-info">No Published Tweet</h4>
            <div>
                Publish a tweet now in 3 easy steps

                <ol>
                    <li>Go to a twitter Thread you like</li>
                    <li>Reply to any of the Posts and tag @permabot</li>
                    <li>Come back to permabot.xyz and tip some ArCoins to publish it to Permaweb</li>
                </ol>
            </div>
        </div>
        <div class="card-body" ng-if="userPageCtrl.myTweets">
            <div class="card repeated-item mb-4" ng-repeat="tweet in userPageCtrl.myTweets">
                <div class="card-body">
                    <div class="card-text">{{tweet.text}}</div>
                    
                    <div class="d-flex justify-content-between">
                        <div class="blockquote-footer">Tweeted by @{{tweet.name}} </div>
                        
                        
                        <div class="blockquote-footer" ng-if="tweet.tweetTimeStamp!==null">{{ tweet.tweetTimeStamp | date: 'yyyy-MM-dd' }}</div>
                    </div>
                </div>

                
            </div>
        </div>
        <div class="card-footer text-muted">
            <div class="d-flex justify-content-between">
                <div >{{userPageCtrl.myTweets.length}} Tweets in Thread </div>
                
            </div>
        </div>
    </div>
    {{{{/rawhelper}}}}
</div>





